{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "jsx": "preserve",
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "types": ["axios", "node", "three"],
    "paths": {
      "@/*": ["src/*"],
      "@img/*": ["src/assets/img/*"]
    }
  },
  "include": ["src", "prerender.js"]
}
